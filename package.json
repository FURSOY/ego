{
  "name": "ego-otobus-takip",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder build --win --publish never",
    "build:win": "electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "EGO Otobüs Takip Uygulaması",
  "dependencies": {
    "axios": "^1.12.1",
    "cheerio": "^1.1.2",
    "electron-updater": "^6.7.3",
    "express": "^5.1.0",
    "puppeteer": "^24.20.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.ego.otobustakip",
    "productName": "EGO Otobüs Takip",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "scraper.cjs",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "GITHUB_KULLANICI_ADI",
      "repo": "ego-main"
    }
  }
}